
{% extends 'store/base.html.j2' %}
{% block title %}Wishlist{% endblock %}

{% block content %}
<body class="page-template-default page woocommerce-wishlist can-uppercase">
    <div id="page" class="hfeed site">
        
        <!-- .top-bar-v1 -->
        {% include 'store/header/header-v1.html.j2' %}
        <!-- .header-v1 -->
        <!-- ============================================================= Header End ============================================================= -->
        <div id="content" class="site-content">
            <div class="col-full">

                
                <div class="row">
                    <nav class="woocommerce-breadcrumb">
                        <a href="home-v1.html">Home</a>
                        <span class="delimiter">
                            <i class="tm tm-breadcrumbs-arrow-right"></i>
                        </span>
                        Wishlist
                    </nav>
                    <!-- .woocommerce-breadcrumb -->
                    {%for w in wish_list%}
                    <div id="primary" class="content-area">
                        <main id="main" class="site-main">
                            <div class="type-page hentry">
                                <header class="entry-header">
                                    <div class="page-header-caption">
                                        <h1 class="entry-title">{{w.name}}</h1>
                                    </div>
                                </header>
                                <!-- .entry-header -->
                                <div class="entry-content">
                                    <form class="woocommerce" method="post" action="#">
                                        <table class="shop_table cart wishlist_table">
                                            <thead>
                                                <tr>
                                                    <th class="product-remove"></th>
                                                    <th class="product-thumbnail"></th>
                                                    <th class="product-name">
                                                        <span class="nobr">Product Name</span>
                                                    </th>
                                                    <th class="product-price">
                                                        <span class="nobr">
                                                            Unit Price
                                                        </span>
                                                    </th>
                                                    <th class="product-stock-status">
                                                        <span class="nobr">
                                                            Stock Status
                                                        </span>
                                                    </th>
                                                    <th class="product-add-to-cart"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                                {%set products = w.products.all()%}
                                                {%for i in products%}

                                                <tr>
                                                    <td class="product-remove">
                                                        <div>
                                                            <a title="Remove this product" class="remove remove_from_wishlist" href="#">Ã—</a>
                                                        </div>
                                                    </td>
                                                    <td class="product-thumbnail">
                                                        <a href="{{url('product_detail', args=[i.slug])}}">
                                                            {%if i.images_product.all()%}
                                                            <img width="180" height="180" alt="" class="wp-post-image" src="{{i.images_product.first().image.url}}">
                                                            {%endif%}
                                                        </a>
                                                    </td>
                                                    <td class="product-name">
                                                        <a href="single-product-fullwidth.html">{{i.name}} &amp; GPS</a>
                                                    </td>
                                                    <td class="product-price">
                                                        <ins>
                                                            <span class="woocommerce-Price-amount amount">
                                                                <span class="woocommerce-Price-currencySymbol">Rs</span>{{i.discounted_price()}}</span>
                                                        </ins>
                                                        <del>
                                                            <span class="woocommerce-Price-amount amount">
                                                                <span class="woocommerce-Price-currencySymbol">Rs</span>{{i.rate}}</span>
                                                        </del>
                                                    </td>
                                                    <td class="product-stock-status">
                                                        {%if i.is_in_stock()%}
                                                        <span class="wishlist-in-stock">In Stock</span>
                                                        {%else%}
                                                        <span class="out-of-stock">Out of Stock</span>
                                                        {%endif%}
                                                    </td>
                                                    <td class="product-add-to-cart">
                                                        <a class="button add_to_cart_button button alt" href="{{url('add_to_cart', args=[i.id])}}"> Add to Cart</a>
                                                    </td>
                                                </tr>
                                                {%endfor%}
                                                
                                                
                                            </tbody>
                                            
                                        </table>
                                        <!-- .wishlist_table -->
                                    </form>
                                    <!-- .woocommerce -->
                                </div>
                                <!-- .entry-content -->
                            </div>
                            <!-- .hentry -->
                        </main>
                        <!-- #main -->
                    </div>
                    {%endfor%}
                    <!-- #primary -->
                </div>
                
                <!-- .row -->
            </div>
            <!-- .col-full -->
        </div>
        <!-- #content -->
        {% include 'store/footer/footer-v1.html.j2' %}
        <!-- .site-footer -->
    </div>

    
</body>

{%endblock%}